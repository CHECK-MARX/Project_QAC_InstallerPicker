<Window x:Class="QACInstallerPicker.App.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="設定" Height="280" Width="640" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="90"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="対応表(Excel)" Margin="0,0,8,8" VerticalAlignment="Center" />
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ExcelPath}" Margin="0,0,8,8" />
        <Button Grid.Row="0" Grid.Column="2" Content="参照" Margin="0,0,0,8" Command="{Binding BrowseExcelCommand}" />

        <TextBlock Grid.Row="1" Grid.Column="0" Text="UNCルート" Margin="0,0,8,8" VerticalAlignment="Center" />
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding UncRoot}" Margin="0,0,8,8" />
        <Button Grid.Row="1" Grid.Column="2" Content="参照" Margin="0,0,0,8" Command="{Binding BrowseUncRootCommand}" />

        <TextBlock Grid.Row="2" Grid.Column="0" Text="出力ベース" Margin="0,0,8,8" VerticalAlignment="Center" />
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding OutputBaseFolder}" Margin="0,0,8,8" />
        <Button Grid.Row="2" Grid.Column="2" Content="参照" Margin="0,0,0,8" Command="{Binding BrowseOutputBaseCommand}" />

        <TextBlock Grid.Row="3" Grid.Column="0" Text="同時実行数" Margin="0,0,8,8" VerticalAlignment="Center" />
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding MaxConcurrentTransfers}" Width="80" Margin="0,0,0,8" />

        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="初期化" Width="90" Margin="0,8,8,0" Command="{Binding ResetCommand}" />
            <Button Content="保存" Width="90" Margin="0,8,8,0" Command="{Binding SaveCommand}" />
            <Button Content="キャンセル" Width="90" Margin="0,8,0,0" Command="{Binding CancelCommand}" />
        </StackPanel>
    </Grid>
</Window>
